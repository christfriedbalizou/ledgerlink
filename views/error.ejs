<%- include('partials/header', { user, currentPage: 'error' }) %>

<main class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 text-center">
    <div>
      <svg class="mx-auto h-16 w-16 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 14.5c-.77.833.192 2.5 1.732 2.5z" />
      </svg>
      
      <h1 class="mt-4 text-3xl font-bold text-gray-900">
        <%= status || 500 %>
      </h1>
      
      <h2 class="mt-2 text-lg font-medium text-gray-700">
        <%= message || 'Something went wrong' %>
      </h2>
      
      <% if (details) { %>
        <p class="mt-2 text-sm text-gray-500">
          <%= details %>
        </p>
      <% } %>
    </div>

    <div class="space-y-4">
      <% if (user) { %>
        <a href="/dashboard" class="btn-primary inline-block">
          Return to Dashboard
        </a>
      <% } else { %>
        <a href="/" class="btn-primary inline-block">
          Return Home
        </a>
      <% } %>
      
      <div>
        <button onclick="history.back()" class="btn-secondary">
          Go Back
        </button>
      </div>
    </div>

    <% if (status === 403) { %>
      <div class="card text-left">
        <h3 class="font-medium text-gray-900">Access Denied</h3>
        <p class="mt-2 text-sm text-gray-600">
          You don't have permission to access this resource. If you believe this is an error, please contact your administrator.
        </p>
      </div>
    <% } else if (status === 404) { %>
      <div class="card text-left">
        <h3 class="font-medium text-gray-900">Page Not Found</h3>
        <p class="mt-2 text-sm text-gray-600">
          The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
        </p>
      </div>
    <% } %>
  </div>
</main>