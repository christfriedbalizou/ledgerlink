<header class="bg-white shadow">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-6">
      <div class="flex items-center">
        <h1 class="text-2xl font-bold text-gray-900">
          <a href="/dashboard" class="hover:text-primary-600 transition-colors">
            ðŸ”— LedgerLink
          </a>
        </h1>
      </div>
      
      <nav class="flex items-center space-x-4">
        <% if (user) { %>
          <div class="flex items-center space-x-4">
            <span class="text-sm text-gray-700">Welcome, <%= user.email %></span>
            <% if (user.is_admin) { %>
              <a href="/admin" class="text-sm text-primary-600 hover:text-primary-700 font-medium">
                Admin
              </a>
            <% } %>
            <a href="/settings" class="text-sm text-gray-600 hover:text-gray-700">
              Settings
            </a>
            <a href="/auth/logout" class="btn-secondary text-sm">
              Logout
            </a>
          </div>
        <% } else { %>
          <a href="/auth/login" class="btn-primary">
            Login
          </a>
        <% } %>
      </nav>
    </div>
  </div>
</header>