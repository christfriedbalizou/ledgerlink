<%- include('../partials/header', { user, currentPage: 'admin' }) %>

<div class="flex">
  <%- include('../partials/sidebar', { user, currentPage: 'admin' }) %>
  
  <main class="flex-1 px-4 py-6 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <div class="mb-8">
        <h1 class="text-2xl font-bold text-gray-900">Global Settings</h1>
        <p class="mt-1 text-sm text-gray-600">Manage system-wide configuration and user limits</p>
      </div>

      <!-- System Status -->
      <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
        <div class="card">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">System Status</dt>
                <dd class="text-lg font-semibold text-green-600">Healthy</dd>
              </dl>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
                <dd class="text-lg font-semibold text-blue-600"><%= totalUsers || 0 %></dd>
              </dl>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Institutions</dt>
                <dd class="text-lg font-semibold text-purple-600"><%= totalInstitutions || 0 %></dd>
              </dl>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Accounts</dt>
                <dd class="text-lg font-semibold text-yellow-600"><%= totalAccounts || 0 %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Account Limits -->
      <div class="card mb-8">
        <h2 class="text-lg font-medium text-gray-900 mb-6">Account Limits</h2>
        <form class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <label for="max-institutions" class="block text-sm font-medium text-gray-700">Max Institutions per User</label>
            <input type="number" id="max-institutions" name="max-institutions" min="1" max="10" 
                   value="<%= maxInstitutionsPerUser || 2 %>" class="mt-1 input-field">
            <p class="mt-2 text-sm text-gray-500">Maximum number of different financial institutions a user can connect</p>
          </div>

          <div>
            <label for="max-accounts" class="block text-sm font-medium text-gray-700">Max Accounts per Institution</label>
            <input type="number" id="max-accounts" name="max-accounts" min="1" max="5" 
                   value="<%= maxAccountsPerInstitution || 1 %>" class="mt-1 input-field">
            <p class="mt-2 text-sm text-gray-500">Maximum number of accounts per institution per user</p>
          </div>
        </form>
      </div>

      <!-- Global Sync Settings -->
      <div class="card mb-8">
        <h2 class="text-lg font-medium text-gray-900 mb-6">Global Sync Settings</h2>
        <form class="space-y-6">
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
              <label for="default-sync-frequency" class="block text-sm font-medium text-gray-700">Default Sync Frequency</label>
              <select id="default-sync-frequency" name="default-sync-frequency" class="mt-1 input-field">
                <option value="hourly">Every hour</option>
                <option value="daily" selected>Daily</option>
                <option value="weekly">Weekly</option>
              </select>
            </div>

            <div>
              <label for="max-sync-retries" class="block text-sm font-medium text-gray-700">Max Sync Retries</label>
              <input type="number" id="max-sync-retries" name="max-sync-retries" min="1" max="10" value="3" class="mt-1 input-field">
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700">Enable Features</label>
            <div class="mt-2 space-y-3">
              <div class="flex items-center">
                <input id="enable-email-exports" name="features" type="checkbox" checked
                       class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
                <label for="enable-email-exports" class="ml-3 text-sm text-gray-700">Email CSV exports</label>
              </div>
              <div class="flex items-center">
                <input id="enable-actual-budget" name="features" type="checkbox" checked
                       class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
                <label for="enable-actual-budget" class="ml-3 text-sm text-gray-700">Actual Budget integration</label>
              </div>
              <div class="flex items-center">
                <input id="enable-auto-sync" name="features" type="checkbox" checked
                       class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
                <label for="enable-auto-sync" class="ml-3 text-sm text-gray-700">Automatic synchronization</label>
              </div>
            </div>
          </div>
        </form>
      </div>

      <!-- System Information -->
      <div class="card mb-8">
        <h2 class="text-lg font-medium text-gray-900 mb-6">System Information</h2>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Version</dt>
            <dd class="mt-1 text-sm text-gray-900">1.0.0</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Environment</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= process.env.NODE_ENV || 'development' %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Database Provider</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= process.env.DATABASE_PROVIDER || 'sqlite' %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Plaid Environment</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= process.env.PLAID_ENV || 'sandbox' %></dd>
          </div>
        </dl>
      </div>

      <!-- Actions -->
      <div class="flex justify-between">
        <div class="space-x-3">
          <button type="button" class="btn-secondary">
            Export System Logs
          </button>
          <button type="button" class="btn-secondary">
            Run Diagnostics
          </button>
        </div>
        <button type="submit" class="btn-primary">
          Save Global Settings
        </button>
      </div>
    </div>
  </main>
</div>