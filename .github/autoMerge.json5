{
  // Auto-merge rule for Renovate PRs (non-major)
  packageRules: [
    {
      description: "Automerge Renovate PRs (non-major)",
      matchUpdateTypes: ["minor", "patch", "digest"],
      automerge: true,
      automergeType: "pr",
      matchManagers: [
        "npm",
        "github-actions",
        "github-releases",
        "github-tags",
      ],
      excludePackagePatterns: ["major"],
    },
  ],
}
