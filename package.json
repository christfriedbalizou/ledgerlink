{
  "name": "project-scaffolding",
  "version": "1.0.0",
  "description": "Base project for OIDC/OAuth2 application setup.",
  "main": "server.js",
  "scripts": {
    "start": "npm run db:migrate && node server.js",
    "dev": "npm run db:migrate && nodemon server.js",
    "test": "npm run db:seed && node --experimental-vm-modules node_modules/.bin/jest --runInBand",
    "db:generate": "node scripts/generate-schema.js && prisma generate",
    "db:migrate": "node scripts/generate-schema.js && prisma migrate deploy && prisma generate",
    "db:seed": "npm run db:migrate && node src/db/seed.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check .",
    "prepare": "husky install"
  },
  "keywords": [
    "express",
    "oauth",
    "oidc",
    "docker"
  ],
  "author": "",
  "type": "module",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^5.0.0",
    "express-session": "^1.18.2",
    "openid-client": "^6.8.0",
    "passport": "^0.7.0",
    "plaid": "^38.1.0"
  },
  "devDependencies": {
    "@prisma/client": "^6.16.2",
    "cross-env": "^10.0.0",
    "jest": "^30.1.3",
    "prisma": "^6.16.2",
    "supertest": "^7.1.4",
    "eslint": "^9.12.0",
    "@eslint/js": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-node": "^11.1.0",
  "eslint-plugin-sonarjs": "^1.0.0",
    "prettier": "^3.3.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7"
  }
  ,
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
