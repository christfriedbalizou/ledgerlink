{
  "name": "ledgerlink",
  "version": "1.0.0",
  "description": "Effortless Financial Data Synchronization",
  "main": "server.js",
  "scripts": {
    "start": "node scripts/db-migrate.js && node src/server.js",
    "dev": "node scripts/db-migrate.js && nodemon src/server.js",
    "build:css": "postcss ui/styles/input.css -o ui/public/css/styles.css --watch",
    "build:css:prod": "postcss ui/styles/utilities.css -o ui/public/css/utilities.css --env production && postcss ui/styles/input.css -o ui/public/css/components.css --env production && cat ui/public/css/utilities.css ui/public/css/components.css > ui/public/css/styles.css && rm ui/public/css/components.css ui/public/css/utilities.css",
    "build": "npm run build:css:prod",
    "test": "npm run db:seed && node --experimental-vm-modules node_modules/.bin/jest --runInBand",
    "db:generate": "npm run db:generate:sqlite && npm run db:generate:postgres",
    "db:generate:sqlite": "prisma generate --schema prisma/sqlite/schema.prisma",
    "db:generate:postgres": "prisma generate --schema prisma/postgres/schema.prisma",
    "db:migrate": "npm run db:migrate:sqlite && npm run db:migrate:postgres || true",
    "db:migrate:sqlite": "DATABASE_PROVIDER=sqlite node scripts/db-migrate.js",
    "db:migrate:postgres": "DATABASE_PROVIDER=postgresql node scripts/db-migrate.js",
    "db:migrate:all": "npm run db:migrate:sqlite && npm run db:migrate:postgres",
    "db:bootstrap:postgres": "npm run db:migrate:postgres",
    "db:seed": "node scripts/db-migrate.js && node src/db/seed.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix || true",
    "lint:ui": "eslint ui --ext .js",
    "lint:ui:fix": "eslint ui --ext .js --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check .",
    "format:ejs": "prettier \"ui/views/**/*.ejs\" --write",
    "format:sql": "find prisma/postgres/migrations prisma/sqlite/migrations -name '*.sql' -print0 2>/dev/null | xargs -0 -I{} npx sql-formatter --fix '{}'",
    "format:sql:check": "echo 'Deprecated: use check:sql'",
    "check:sql": "npm run format:sql && git diff --exit-code --quiet || (echo 'SQL formatting issues found. Run npm run format:sql to fix.' && exit 1)",
    "lint:sql": "npm run check:sql",
    "format:all": "npm run format && npm run format:ejs && npm run format:sql",
    "lint:ci": "npm run format:check && npm run lint && npm run check:sql",
    "prepare": "husky install"
  },
  "keywords": [
    "express",
    "oauth",
    "oidc",
    "docker"
  ],
  "author": "",
  "type": "module",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.0.0",
    "express-ejs-layouts": "^2.5.1",
    "express-openid-connect": "^2.19.2",
    "express-session": "^1.18.2",
    "openid-client": "^6.8.0",
    "plaid": "^39.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@prisma/client": "^6.16.2",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^1.0.0",
    "husky": "^9.0.11",
    "jest": "^30.1.3",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-ejs": "^1.0.3",
    "prisma": "^6.16.2",
    "sql-formatter": "^15.4.7",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.0.0"
  },
  "lint-staged": {
    "ui/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "prisma/migrations/**/*.sql": [
      "bash -c 'for f in \"$@\"; do npx sql-formatter --fix \"$f\"; done' --"
    ]
  }
}
