{
  "name": "project-scaffolding",
  "version": "1.0.0",
  "description": "Base project for OIDC/OAuth2 application setup.",
  "main": "server.js",
  "scripts": {
    "start": "npm run db:migrate && node src/server.js",
    "dev": "npm run db:migrate && nodemon src/server.js",
    "build:css": "postcss src/styles/input.css -o public/css/styles.css --watch",
    "build:css:prod": "postcss src/styles/utilities.css -o public/css/utilities.css --env production && postcss src/styles/input.css -o public/css/components.css --env production && cat public/css/utilities.css public/css/components.css > public/css/styles.css && rm public/css/components.css public/css/utilities.css",
    "build": "npm run build:css:prod",
    "test": "npm run db:seed && node --experimental-vm-modules node_modules/.bin/jest --runInBand",
    "db:generate": "node scripts/generate-schema.js && prisma generate",
    "db:migrate": "node scripts/generate-schema.js && prisma migrate deploy && prisma generate",
    "db:seed": "npm run db:migrate && node src/db/seed.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check .",
    "prepare": "husky install"
  },
  "keywords": [
    "express",
    "oauth",
    "oidc",
    "docker"
  ],
  "author": "",
  "type": "module",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.0.0",
    "express-openid-connect": "^2.19.2",
    "express-session": "^1.18.2",
    "openid-client": "^6.8.0",
    "plaid": "^38.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@prisma/client": "^6.16.2",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^1.0.0",
    "husky": "^9.0.11",
    "jest": "^30.1.3",
    "lint-staged": "^16.0.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.3.3",
    "prisma": "^6.16.2",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
