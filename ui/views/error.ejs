<main class="px-4 py-12 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto text-center">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100"><%= status %> <%= message %></h1>
      <% if (details) { %>
        <p class="mt-4 text-sm text-gray-600 dark:text-gray-400"><%= details %></p>
      <% } %>
    </div>
    <div class="space-x-4">
      <a href="/" class="btn-primary inline-block">Home</a>
      <% if (user) { %>
        <a href="/dashboard" class="btn-secondary inline-block">Dashboard</a>
      <% } else { %>
        <a href="/auth/login" class="btn-secondary inline-block">Login</a>
      <% } %>
    </div>
    <% if (process.env.NODE_ENV === 'development') { %>
      <div class="mt-10 text-left bg-gray-100 dark:bg-gray-800 p-6 rounded-lg overflow-auto">
        <h2 class="text-sm font-semibold mb-2 text-gray-700 dark:text-gray-300">Debug Info</h2>
        <pre class="text-xs text-gray-600 dark:text-gray-400 whitespace-pre-wrap"><%= (error && error.stack) || '' %></pre>
      </div>
    <% } %>
  </div>
</main>